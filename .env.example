# Server
PORT=4000
CORS_ORIGIN=http://localhost:8080

# MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# JWT
JWT_SECRET=replace-with-strong-random-secret
JWT_REFRESH_SECRET=unused-but-reserved
COOKIE_SAME_SITE=lax

# Google OAuth (passport unused if using Firebase)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback
GOOGLE_REDIRECT_SUCCESS=

# Firebase (client)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Firebase Admin (server) - JSON string of service account
# Example (single line):
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...",...}
FIREBASE_SERVICE_ACCOUNT=
